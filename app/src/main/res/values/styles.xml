<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ButtonSuccess" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">#029146</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.ButtonDanger" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">#DE3329</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
