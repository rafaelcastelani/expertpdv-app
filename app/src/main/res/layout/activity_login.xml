<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="true"
    android:animationCache="true"
    android:background="@color/colorPrimary"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/app_icon_launcher" />

        <EditText
            android:id="@+id/idw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_dia_a_dia"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Cpf/Cnpj"
            android:inputType="textEmailAddress"
            android:textAlignment="viewStart"
            android:textColorHighlight="@color/black"
            android:textColorHint="?attr/colorControlNormal"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pwdw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idw"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_dia_a_dia"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColorHighlight="@color/black"
            android:textColorHint="?attr/colorControlNormal"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signinw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pwdw"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Entrar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>
